{
  "name": "Internet Postcards",
  "description": "Send real postcards to your loved ones!",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "activeTab", "scripting", "desktopCapture"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/favicon_16.png",
      "32": "/images/favicon_32.png",
      "48": "/images/favicon_48.png",
      "128": "/images/favicon_128.png"
    }
  },
  "icons": {
    "16": "/images/favicon_16.png",
    "32": "/images/favicon_32.png",
    "48": "/images/favicon_48.png",
    "128": "/images/favicon_128.png"
  },
  "options_page": "options.html"
}
